@keyframes rotateOut {
    to      { transform: scale(-3000px); opacity: 0; }
}

@keyframes rotateIn {
    from      { transform: scale(3000px); opacity: 1; }
}


.ng-leave     
	animation rotateOut 0.25s both ease-in
	z-index 9999
	
.ng-enter
	animation: rotateIn 0.25s both ease-in
	z-index: 1
	
