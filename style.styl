#lefty
	height 100px
	width 100px
	top 100px
	left 0px
	animation middley 1s 1
	
.green
	background-color green
	
#middle
	height 200px
	width 200px
	left 200px
	animation left 1s 1
	
#middley
	height 200px
	width 200px
	left 200px
	animation righty 1s 1
	
.blue
	background-color blue
	
#right
	height 100px
	width 100px
	left 500px
	top 100px
