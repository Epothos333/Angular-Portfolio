charcoal = #36454f
bannerBlue = rgb(206,232,247)

a 
	text-decoration none
	
.footer
	background-color bannerBlue
	border-top 6px solid charcoal
	border-radius 5px
	position fixed
	bottom 0
	width 100%
	height 50px
	font-size 10px
	margin-top 10px

.banner
	background-color bannerBlue
	border-bottom 6px solid charcoal
	border-radius 5px
	margin 0

.centerMe
	margin 0 auto

body
	font-family audiowide
	

.container-fluid
	padding-left 0
	padding-right 0
	margin-right 0
	margin-left 0
	
.row
	padding 0
	margin 0
	
.mypicture
	border-radius 200px
	width 40%
	margin 5px 15px 0 0
	border 3px solid charcoal
	
@media screen and (max-width: 900px) 
	.mypicture 
		width 100%

	
.addTopM
	margin-top 15px
	border 5px ridge charcoal
	border-radius 15px
	background-color bannerBlue
	box-shadow 0px 0px 15px charcoal
	margin-right 0

.blockMe
	display block
	margin 20px 0
	width 100%
	
#rightForm, #leftForm
	width 45%
	display inline-block
	
textarea
	position relative
	height 20%
	width 100%
	margin-left 30px

	
@keyframes rotateOut {
    to      { transform: scale(-3000px); opacity: 0; }
}

@keyframes rotateIn {
    from      { transform: scale(3000px); opacity: 1; }
}


.ng-leave     
	animation rotateOut 0.25s both ease-in
	z-index 9999
	
.ng-enter
	animation: rotateIn 0.25s both ease-in
	z-index: 1

